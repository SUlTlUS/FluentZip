<Page
    x:Class="FluentZip.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FluentZip"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Transparent">

    <Grid>
        <!-- 居中容器 -->
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="20" Orientation="Horizontal">
            <!-- 打开压缩文件按钮 -->
            <Button Click="OpenArchive_Click" Width="180" Height="200" CornerRadius="8" Background="{ThemeResource LayerFillColorDefaultBrush}">
                <StackPanel Spacing="10">
                    <FontIcon Glyph="&#xE8E5;" FontFamily="Segoe Fluent Icons" FontSize="48"/>
                    <TextBlock Text="打开压缩文件" HorizontalAlignment="Center" Style="{StaticResource SubtitleTextBlockStyle}"/>
                </StackPanel>
            </Button>

            <!-- 新建压缩文件按钮 -->
            <Button Click="NewArchive_Click" Width="180" Height="200" CornerRadius="8" Background="{ThemeResource LayerFillColorDefaultBrush}">
                <StackPanel Spacing="10">
                    <FontIcon Glyph="&#xE710;" FontFamily="Segoe Fluent Icons" FontSize="48"/>
                    <TextBlock Text="新建压缩文件" HorizontalAlignment="Center" Style="{StaticResource SubtitleTextBlockStyle}"/>
                </StackPanel>
            </Button>
        </StackPanel>

        <!-- 底部提示条 -->
        <Border VerticalAlignment="Bottom" Background="Transparent" Height="40">
            <TextBlock Text="提示: 支持拖拽文件直接解压" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Border>
    </Grid>
</Page>