<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="FluentZip.AdvencedSettings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FluentZip"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
 
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Padding="32,24">
        <Border BorderBrush="{ThemeResource SurfaceStrokeColorDefaultBrush}" BorderThickness="0,0,0,1" Margin="0,0,0,8">
            <TextBlock Text="ZIP/ZIPX 压缩设置" FontSize="18" FontWeight="SemiBold"/>
        </Border>

        <Grid Margin="0,40,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="160"/>
                <ColumnDefinition Width="260"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="压缩方法" VerticalAlignment="Center"/>
            <ComboBox Grid.Column="1" SelectedIndex="0" Width="200" x:Name="CompressionMethodComboBox">
                <ComboBoxItem Content="Deflate" Tag="deflate"/>
                <ComboBoxItem Content="Deflate64" Tag="deflate64"/>
                <ComboBoxItem Content="LZMA" Tag="lzma"/>
                <ComboBoxItem Content="BZip2" Tag="bzip2"/>
                <ComboBoxItem Content="Store" Tag="store"/>
            </ComboBox>

            <TextBlock Grid.Row="1" Text="加密算法" VerticalAlignment="Center"/>
            <ComboBox Grid.Row="1" Grid.Column="1" SelectedIndex="2" Width="200" x:Name="EncryptionAlgorithmComboBox">
                <ComboBoxItem Content="AES-256" Tag="aes256"/>
                <ComboBoxItem Content="AES-128" Tag="aes128"/>
                <ComboBoxItem Content="ZipCrypto" Tag="zipcrypto"/>
            </ComboBox>

            <TextBlock Grid.Row="2" Text="CPU 线程数" VerticalAlignment="Center"/>
            <ComboBox Grid.Row="2" Grid.Column="1" SelectedIndex="0" Width="200" x:Name="ThreadCountComboBox">
                <ComboBoxItem Content="自动" Tag="auto"/>
                <ComboBoxItem Content="1" Tag="1"/>
                <ComboBoxItem Content="2" Tag="2"/>
                <ComboBoxItem Content="4" Tag="4"/>
                <ComboBoxItem Content="8" Tag="8"/>
                <ComboBoxItem Content="16" Tag="16"/>
            </ComboBox>
            <HyperlinkButton Grid.Row="2" Grid.Column="2" Content="[?]" Margin="8,0,0,0" VerticalAlignment="Center" Foreground="{ThemeResource AccentFillColorDefaultBrush}" Click="ThreadHelp_Click"/>

            <CheckBox Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Content="存储符号链接" Margin="0,12,0,0" x:Name="StoreSymlinkCheckBox"/>
            <CheckBox Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Content="文件说明" Margin="0,8,0,8" x:Name="StoreCommentCheckBox"/>
 
            <TextBox Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="3" Height="120" Margin="0,8,0,0" AcceptsReturn="True" TextWrapping="Wrap" PlaceholderText="压缩文件说明..."/>
        </Grid>
    </Grid>
</UserControl>
